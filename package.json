{
  "name": "porygon-backend",
  "version": "0.5.0",
  "description": "REST API for the Porygon website",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "node ./bin/www",
    "migrate:test": "db-migrate --config config/database.config.json --env test up",
    "migrate:reset": "db-migrate --config config/database.config.json --env test reset",
    "migrate:init": "mysql -u travis porygonTest < .deploy/populateDatabase.sql",
    "pretest": "npm run migrate:reset && npm run migrate:test && npm run migrate:init",
    "test": "NODE_ENV=test LOG_LEVEL=debug jest --detectOpenHandles --testTimeout=10000"
  },
  "dependencies": {
    "acorn": "^6.4.0",
    "async": "^3.1.0",
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.6",
    "db-migrate-mysql": "^1.1.10",
    "debug": "~2.6.3",
    "express": "^4.17.1",
    "express-mysql-session": "^2.1.2",
    "express-session": "^1.17.0",
    "express-swaggerize-ui": "^1.1.0",
    "js-yaml": "^3.13.1",
    "keycloak-connect": "^6.0.1",
    "knex": "^0.19.5",
    "log4js": "^6.1.0",
    "morgan": "^1.9.1",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "rotating-file-stream": "^2.0.1",
    "rxjs": "^5.5.12",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "handlebars": "^4.5.0",
    "jest": "^24.9.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/app.js",
      "<rootDir>/middlewares/**/*.js",
      "<rootDir>/routes/**/*.js",
      "<rootDir>/services/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ]
  }
}
