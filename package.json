{
  "name": "porygon-backend",
  "version": "0.6.2",
  "description": "REST API for the Porygon website",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build-ts": "rm -rf ./build/ && tsc",
    "build-static": "mkdir build/views && cp -r views/* build/views && mkdir build/public && cp -r public/* build/public && mkdir build/doc && cp -r doc/* build/doc",
    "build": "npm run build-ts && npm run build-static",
    "start": "node ./bin/www.js",
    "migrate:test-mysql": "db-migrate --config config/database.config.json --env test-mysql up",
    "migrate:test-psql": "db-migrate --config config/database.config.json --env test-psql up",
    "migrate:reset-mysql": "db-migrate --config config/database.config.json --env test-mysql reset",
    "migrate:reset-psql": "db-migrate --config config/database.config.json --env test-psql reset",
    "migrate:init-mysql": "mysql -u azure -pazure porygonTest < .deploy/populateDatabaseMysql.sql",
    "migrate:init-psql": "psql -U azure porygontest -f .deploy/populateDatabasePg.sql",
    "pretest-mysql": "npm run migrate:reset-mysql && npm run migrate:test-mysql && npm run migrate:init-mysql",
    "pretest-psql": "npm run migrate:reset-psql && npm run migrate:test-psql && npm run migrate:init-psql",
    "test-psql": "NODE_ENV=test LOG_LEVEL=debug jest --detectOpenHandles --testTimeout=1000",
    "pretest": "npm run pretest-mysql",
    "test": "NODE_ENV=test LOG_LEVEL=debug jest --detectOpenHandles --testTimeout=1000"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "acorn": "^6.4.2",
    "async": "^3.2.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.11",
    "db-migrate-mysql": "^1.1.10",
    "db-migrate-pg": "1.2.2",
    "debug": "~2.6.3",
    "express": "^4.17.1",
    "express-swaggerize-ui": "^1.1.0",
    "js-yaml": "^3.14.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "log4js": "^6.3.0",
    "morgan": "^1.10.0",
    "pug": "^2.0.4",
    "request": "^2.88.2",
    "rotating-file-stream": "^2.1.3",
    "rxjs": "^5.5.12",
    "serve-favicon": "^2.5.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "handlebars": "^4.7.6",
    "jest": "^26.6.3",
    "kind-of": "^6.0.3",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/app.js",
      "<rootDir>/middlewares/**/*.js",
      "<rootDir>/routes/**/*.js",
      "<rootDir>/services/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ]
  }
}
